    <recipe category="Main Course">
        <title>Cavatappi w/Bacon \&amp; Veggies</title>
        <ingredients>
            <ingredient>8 oz. uncooked cavatappi;</ingredient>
            <ingredient>4 slices chopped bacon;</ingredient>
            <ingredient>2 tsp. olive oil;</ingredient>
            <ingredient>1 cup onion;</ingredient>
            <ingredient>1 tsp. bottled minced garlic;</ingredient>
            <ingredient>1 med. zucchini;</ingredient>
            <ingredient>1 cup corn kernals;</ingredient>
            <ingredient>1 pt. grape tomatoes;</ingredient>
            <ingredient>&frac12; cup shaved Parmigiano-Reggiano</ingredient>
            <ingredient>&frac14; cup fresh basil;</ingredient>
            <ingredient>&frac12; tsp. salt</ingredient>
            <ingredient>&frac14; tsp. black pepper</ingredient>
        </ingredients>
        <steps>
            <step>Cook pasta according to package</step>
            <step>Cook bacon over med-high until crisp. Remove bacon w/ slotted spoon. Add to pan
                \&amp; onion \&amp; garlic. Saut&eacute; 2 min. Add zuccini and cook 3 mins. or
                until tomatoes burst.</step>
            <step>Add pasta to mixture. Cook 1 min or until heated. Remove from heat.</step>
            <step>Add &frac14; cup cheese, basil, salt and pepper. Toss and add remaining
                cheese.</step>
        </steps>
    </recipe>
    <recipe category="Cake">
        <title>Apple Sauce Cake</title>
        <image src="PXL_20250830_132228880_clipped_applesauce_cake">
            <caption>Apple Sauce Cake</caption>
        </image>
        <ingredients>
            <ingredient>&frac12; cup butter or margarine, softened</ingredient>
            <ingredient>&frac34; cup honey </ingredient>
            <ingredient>1 cup applesauce </ingredient>
            <ingredient>&frac12; cup raisins </ingredient>
            <ingredient>2 cups flour </ingredient>
            <ingredient>&frac12; cup chopped walnuts </ingredient>
            <ingredient>1 tsp Baking soda </ingredient>
            <ingredient> 1 tsp Baking Powder</ingredient>
            <ingredient> 1/2 tsp Cinnamon</ingredient>
            <ingredient> 1/2 tsp. nutmeg</ingredient>
            <ingredient> 1/4 tsp. cloves</ingredient>
        </ingredients>
        <steps>
            <step> Preheat oven to 350 degrees</step>
            <step>In large bowl of electric mixer, cream butter.</step>
            <step>Continue to cream while adding honey in a fine stream.</step>
            <step>Beat in applesauce.</step>
            <step>In separate bowl, combine flour, baking soda, baking powder \&amp; spices.</step>
            <step>Gradually stir into honey mixture until thoroughly mixed. Add raisins \&amp;
                nuts.</step>
            <step>Pour into 8"x8"pan bake about 40 minutes. Serve with raisin sauce.</step>
        </steps>

        <p>Raisin sauce</p>
        <ingredients>
            <ingredient>1 cup chopped raisans</ingredient>
            <ingredient>1 1/2 cups water</ingredient>
            <ingredient>1/2 cup honey</ingredient>
            <ingredient>1 1/2 tbs. lemon juice</ingredient>
        </ingredients>
        <steps>
            <step>Bring raisins and water to boil</step>
            <step>Add honey</step>
            <step>Simmer fo 15 minutes. Add lemon juice while still warm.</step>
        </steps>

    </recipe>

    <recipe category="Pastry">
        <title>Sunday Buns</title>
        <comment>350 degrees</comment>
        <ingredients>
            <group instruction="mix">
                <ingredient>1/3 c. shortening</ingredient>
                <ingredient>1/3 c. Honey</ingredient>
            </group>
            <group instruction="Stir in dry ingredients alternately with milk.">
                <ingredient>1 egg</ingredient>
                <ingredient>1 1/2 cups flour</ingredient>
                <ingredient>1 1/2 tsp. baking powder </ingredient>
                <ingredient>1/2 tsp. salt </ingredient>
                <ingredient>1/4 tsp. nutmeg </ingredient>
                <ingredient>1/2 cup milk</ingredient>
            </group>
        </ingredients>

        <steps>
            <step>Stir in dry ingredients alternately with milk.</step>
            <step>Fill 15 greased muffin tins 2/3 full.</step>
            <step>Bake 20-25 min at 350 degrees. </step>
            <step>While baking, melt 1/3 cup margarine in sauce pan.</step>
            <step>In small bowl, mix 1/2 cup sugar \&amp; 1 tsp. cinnamon.</step>
            <step>Immediately after baking, dip buns in melted margarine, then in cinnamon/sugar
                mixture.</step>
        </steps>
    </recipe>

    <recipe category="Main Course">
        <title>Chicken Fiesta Cavatappi Casserole</title>
        <ingredients>
            <ingredient> 16 oz. package Price Chopper Cavatappi cooked according to the package
                directions.</ingredient>
            <ingredient> 1 tablespoon chili powder </ingredient>
            <ingredient> 1 tablespoon oregano </ingredient>
            <ingredient> 1/3 cup olive oil </ingredient>
            <ingredient> 1 cup chicken broth</ingredient>
            <ingredient> 1 1/2 cups heavy cream </ingredient>
            <ingredient> 1/2 cup onions, diced</ingredient>
            <ingredient>1 1/2 cups shredded cheddar cheese </ingredient>
            <ingredient> 1 cup tomatoes, diced 1/4 cup Parmesan cheese </ingredient>
            <ingredient> 1 cup zucchini, diced </ingredient>
            <ingredient> Salt and pepper to taste </ingredient>
            <ingredient> 1 lb. cooked chicken, diced </ingredient>
        </ingredients>
        <steps>
            <step> Heat olive oil in a medium skillet.</step>
            <step>Add onions and zucchini, cook 2 minutes.</step>
            <step> Add tomatoes and chicken, cook 2 more minutes.</step>
            <step> Add the spices and chicken broth then cook until half the broth has
                reduced.</step>
            <step>Mix in the heavy cream and cheddar cheese and bring to a simmer.</step>
            <step>In a large bowl, mix the cooked cavatappi and the above mixture together until
                evenly mixed and pour into a prepared casserole dish.</step>
            <step>Top with Parmesan cheese and bake in a 350 degree oven for 8-10 minutes.</step>
        </steps>
        <comment>Serves 6 to 8</comment>
    </recipe>
